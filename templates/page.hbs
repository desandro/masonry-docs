<!doctype html>
<html class="{{#if isExport}}export{{/if}}" lang="en">
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width" />
  <meta name="description" content="Cascading grid layout library" />

  <title>Masonry{{#unless page.isHomepage}} &middot; {{page.title}}{{/unless}}</title>

  {{#if isDev}}
    {{! DEV MODE - including each .css file }}
    {{#each cssPaths}}
      <link rel="stylesheet" href="../{{this}}" />
    {{/each}}
  {{else}}
    {{! in production, just include concat CSS }}
    <link rel="stylesheet" href="{{#if page.is404}}/{{/if}}css/masonry-docs.css?3" media="screen" />
  {{/if}}

</head>
<body class="page--{{basename}}" data-page="{{basename}}">

  {{> top-banner}}

  {{> site-nav}}

  {{! display hero only on homepage }}
  {{#if page.isHomepage}}
    {{> hero}}
  {{/if}}

  <div id="content" class="content container">

    {{#unless page.isHomepage}}
      <h1>{{page.title}}</h1>
    {{/unless}}

    {{> page-nav}}

{{! all page content goes here }}
{{#block "main"}}{{/block}}

  </div>

  {{> site-nav}}

  {{> site-footer}}

{{#if isDev}}
  {{#each jsPaths}}
    {{! DEV MODE - including each .js file }}
    <script src="../{{this}}"></script>
  {{/each}}
{{else}}
  {{! in production, just include concat/minified js }}
  <script src="{{#if page.is404}}/{{/if}}js/masonry-docs.min.js?2"></script>
{{/if}}

</body>
</html>
